---
interface Props {
  title: string;
  description: string;
  image?: string;
  distance?: string;
  link?: string;
}

const { title, description, image, distance, link } = Astro.props;
---

<div class="card">
  {image && (
    <div class="relative overflow-hidden aspect-[16/9]">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover"
        loading="lazy"
      />
      {distance && (
        <span class="absolute top-3 right-3 bg-moss text-offwhite text-xs px-3 py-1 rounded-full font-heading">
          {distance}
        </span>
      )}
    </div>
  )}
  <div class="p-5">
    <h3 class="text-lg mb-2">{title}</h3>
    <p class="text-sm text-brown-light leading-relaxed">{description}</p>
    {link && (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1 text-sm text-moss font-semibold mt-3 hover:text-moss-dark transition-colors"
      >
        En savoir plus
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    )}
  </div>
</div>
