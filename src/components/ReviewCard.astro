---
interface Props {
  author: string;
  date?: string;
  rating?: number;
  text: string;
  source?: string;
}

const { author, date, rating, text, source } = Astro.props;
---

<div class="card p-6 md:p-8">
  <!-- Stars -->
  {rating && (
    <div class="flex gap-1 mb-3">
      {Array.from({ length: 5 }).map((_, i) => (
        <svg
          class={`w-5 h-5 ${i < rating ? 'text-gold' : 'text-stone'}`}
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
  )}

  <!-- Quote -->
  <blockquote class="text-brown/90 leading-relaxed italic mb-4">
    "{text}"
  </blockquote>

  <!-- Author -->
  <div class="flex items-center gap-3">
    <div class="w-10 h-10 rounded-full bg-moss/20 flex items-center justify-center">
      <span class="text-moss font-heading font-bold text-sm">{author.charAt(0).toUpperCase()}</span>
    </div>
    <div>
      <p class="font-heading font-semibold text-sm">{author}</p>
      <div class="flex items-center gap-2 text-xs text-brown-light">
        {date && <span>{date}</span>}
        {source && <span>via {source}</span>}
      </div>
    </div>
  </div>
</div>
